<h2 class="title is-2 has-text-centered">Log in</h2>

<div class="columns is-centered">
  <div class="column is-half">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'box' }) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: 'checkbox' %>
          <%= f.label :remember_me, class: 'checkbox' %>
        </div>
      <% end %>

      <div class="field">
        <%= f.submit "Log in", class: 'button is-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
