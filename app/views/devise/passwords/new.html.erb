<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <h2 class="title is-2 has-text-centered">Forgot your password?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'box' }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email, class: 'label' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
          </div>

          <div class="field">
            <%= f.submit "Send me reset password instructions", class: 'button is-primary' %>
          </div>
        <% end %>

        <div class="has-text-centered">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
