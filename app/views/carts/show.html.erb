<!-- views/carts/show.html.erb -->
<h1>Your Cart</h1>

<% if session[:cart].empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <table>
    <% session[:cart].each do |item| %>
      <% product = Product.find(item["product_id"]) %>
      <tr>
        <td><%= product.name %></td>
        <td><%= item["quantity"] %></td>
        <td><%= link_to 'Remove', remove_from_cart_path(product_id: product.id), method: :delete %></td>
      </tr>
    <% end %>
  </table>

  <!-- Display the total price from the @total_price instance variable -->
  <p>Total Price: <%= number_to_currency(@total_price) %></p> <!-- Format as currency -->
  <!-- Temporarily comment out the Checkout link -->
  <!-- <%= link_to 'Checkout', checkout_path %> --> <!-- Replace with your actual checkout path -->
<% end %>
