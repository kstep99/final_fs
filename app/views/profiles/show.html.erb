<!-- app/views/profiles/show.html.erb -->
<h1>Profile Page</h1>
<% if @customer.image.attached? %>
  <%= image_tag @customer.image.variant(resize_to_limit: [100, 100]).processed %>
<% else %>
  <%= image_tag 'default-profile.jpg' %>
<% end %>
<p>Name: <%= @customer.full_name %></p> <!-- Changed to full_name -->
<p>Email: <%= @customer.email %></p>
<p>Address: <%= @customer.address %></p>
<p>City: <%= @customer.city %></p>
<p>Postal Code: <%= @customer.postal_code %></p>
<% if @customer.province %>
  <p>Province: <%= @customer.province.name %></p>
<% end %>
<%= link_to 'Edit Profile', edit_profile_path %>
