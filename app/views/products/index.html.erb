<!-- app/views/products/index.html.erb -->

<div class="columns" style="min-height: 100vh;">

  <!-- Sidebar with Filter Form -->
  <div class="column is-2" style="background-color: #5c5c5c; display: flex; flex-direction: column;">
    <aside class="menu" style="flex-grow: 1; display: flex; flex-direction: column;">
      <div style="padding: 0.75rem;">
        <p class="menu-label" style="color: #ffffff;">
          Filter Products
        </p>
        <div class="menu-list">
          <%= form_with(url: products_path, method: :get, local: true, class: 'form') do |form| %>
            <div class="field">
              <%= form.label :category_id, "Choose a category:", class: 'label' %>
              <div class="control">
                <%= form.collection_select(:category_id, Category.all, :id, :name, { include_blank: true }, { class: 'select' }) %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= form.submit "Filter", class: 'button is-link' %>
              </div>
            </div>
          <% end %>
          <%= link_to 'Cart', cart_path, class: 'button is-primary' %>
        </div>
      </div>
      <div style="flex-grow: 1;"></div>
    </aside>
  </div>

  <!-- Main Content Column -->
  <div class="column is-three-fourths">

    <!-- Customer Dashboard and Authentication Button Section -->
    <% if customer_signed_in? %>
      <div class="columns is-vcentered is-mobile" style="background-color: #282828; color: white;">
        <!-- Title -->
        <div class="column is-one-third">
          <h1 class="title" style="color: #cecece;">Customer Dashboard</h1>
        </div>
        <!-- Search Form -->
        <div class="column is-one-third has-text-centered">
          <%= render 'partials/search' %>
        </div>
        <!-- Greeting and Logout and profile and cart -->
        <div class="column is-one-third has-text-right">
          <%= link_to 'Profile', profile_path, class: 'button is-primary' %>
          <p class="hello-message">Hello, <%= current_customer.email %></p>
          <%= link_to 'Logout', destroy_customer_session_path, method: :delete, class: 'button is-primary logout-button' %>
        </div>
      </div>
    <% else %>
      <div class="columns is-vcentered is-mobile">
        <!-- Title -->
        <div class="column is-one-third">
          <h1 class="title">Welcome to Our Store</h1>
        </div>
        <!-- Search Form Placeholder (empty column to balance the layout) -->
        <div class="column is-one-third"></div>
        <!-- Login -->
        <div class="column is-one-third has-text-right">
          <%= link_to 'Login', new_customer_session_path, class: 'button is-primary' %>
        </div>
      </div>
    <% end %>


    <!-- Products Listing Section -->
    <h2 class="title">Our Products</h2>
    <div class="columns is-multiline">
      <% @products.each do |product| %>
        <div class="column is-2">
          <div class="card">
            <div class="card-content">
              <%= link_to product.name, product_path(product), class: 'product-name title is-5' %>
              <% if product.images.attached? %>
                <% product.images.each do |image| %>
                  <figure class="image is-4by3">
                    <%= image_tag(image, class: "is-rounded") %>
                  </figure>
                <% end %>
              <% end %>
              <p class="subtitle is-6"><%= number_to_currency(product.price) %></p>
              <!-- Add to Cart Form -->
              <%= form_with(url: add_to_cart_product_path(product), method: :post, local: true) do |f| %>
                <%= hidden_field_tag :product_id, product.id %>
                <div class="field has-addons">
                  <div class="control">
                    <%= number_field_tag :quantity, 1, min: 1, class: 'input', style: 'width: 60px;' %>
                  </div>
                  <div class="control">
                    <%= submit_tag 'Add to Cart', class: 'button is-small is-primary' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Pagination Links -->
    <div class="pagination-wrapper" style="text-align: center;">
      <%= paginate @products, theme: 'bulma' %>
    </div>

  </div>

</div>
