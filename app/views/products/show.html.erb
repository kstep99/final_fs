<div class="product-details">
  <h1><%= @product.name %></h1>
  <p><%= @product.description %></p>
  <p>Price: <%= number_to_currency(@product.price) %></p>

  <div class="product-images">
    <% @product.images.each do |image| %>
      <%= image_tag(image, size: "300x300") %>
    <% end %>
  </div>
</div>
